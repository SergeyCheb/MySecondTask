<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="60dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="0dp"
        android:layout_gravity="center"
        android:text="Love is too young to know what conscience is,">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="0dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="0dp"
        android:layout_gravity="center"
        android:text="Yet who knows not conscience is born of love?">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="0dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="0dp"
        android:layout_gravity="center"
        android:text="Then, gentle cheater, urge not my amiss,">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="0dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="60dp"
        android:layout_gravity="center"
        android:text="Lest guilty of my faults thy sweet self prove.">
    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Go to Next Strings"
        android:id="@+id/btnActTwo">
    </Button>
    <!--    ***********************************************************************    -->

</LinearLayout>
